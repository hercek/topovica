{
  "manifest_version": 2,
  "name": "FollowLink",
  "version": "0.1",

  "description": "Reimplements vimperator's link following.",

  "applications": {
    "gecko": {
      "id": "FollowLink@hck.sk"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/topovica-content.js"],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["scripts/topovica-bg.js"]
  },
  "permissions": ["find", "tabs"]
}
